        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/v1/accounts/{{accountId}}/transactions/{{transactionId}}",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "accounts", "{{accountId}}", "transactions", "{{transactionId}}"]
        }
      }
    }
  ]
}
